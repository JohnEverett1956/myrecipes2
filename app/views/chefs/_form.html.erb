<%= render "shared/errors", obj: @chef %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@chef, :hmtl => {roles: "form", class: "form-horizontal"}) do |f| %> 
      <div class="form-group col-md-12">
        <div class="col-md-2 control-label">
          <%= f.label :chefname, "Choose Chef name" %>
        </div>
        <div class="col-md-10">
          <%= f.text_field :chefname, class: "form-control", placeholder: "Enter your name" %>
        </div>
      </div>
      <div class="form-group col-md-12">
        <div class="col-md-2 control-label">
          <%= f.label :email %>
        </div>
        <div class="col-md-10">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>
      <div class="form-group col-md-12">
        <div class="col-md-2 control-label">
          <%= f.label :password %>
        </div>
        <div class="col-md-10">
          <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
        </div>
      </div>      
      <div class="form-group col-md-12">
        <div class="col-md-2 control-label">
          <%= f.label :password_confirmation, "Confirm Password" %>
        </div>
        <div class="col-md-10">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
        </div>
      </div>
      
      <div class="form-group col-md-12">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit(@chef.new_record? ? "Create my account" : "Edit chef profile",
          class: "btn btn-primary btn-lg btn-xlarge") %>
        </div>
      </div>
    <% end %>
    <div class="col-md-12 col-md-offset-5 colormatch">
      [ <%= link_to "Cancel request and return to recipes", recipes_path  %> ]
    </div>
  </div>
</div>