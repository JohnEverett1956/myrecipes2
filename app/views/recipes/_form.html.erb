<%= render "shared/errors", obj: @recipe %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@recipe, :hmtl => {roles: "form", class: "form-horizontal"}) do |f| %> 
      <div class="form-group col-md-12">
        <div class="col-md-2 control-label">
          <%= f.label :name %>
        </div>
        <div class="col-md-10">
          <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe" %>
        </div>
      </div>
      <div class="form-group col-md-12">
        <div class="col-md-2 control-label">
          <%= f.label :description %>
        </div>
        <div class="col-md-10">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps to create recipe" %>
        </div>
      </div>
      <div class="form-group col-md-12">
        <div class="row">
          <div class="col-md-offset-2 col-md-10">
            <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
          </div>
        </div>
      </div>      
      <div class="form-group col-md-12">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-12 col-md-offset-5 colormatch">
      [ <%= link_to "Cancel request and return to recipes", recipes_path  %> ]
    </div>
  </div>
</div>