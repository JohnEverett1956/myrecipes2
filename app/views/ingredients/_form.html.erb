<%= render "shared/errors", obj: @ingredient %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@ingredient, :hmtl => {roles: "form", class: "form-horizontal"}) do |f| %> 
      <div class="form-group col-md-12">
        <div class="col-md-2 control-label">
          <%= f.label :name %>
        </div>
        <div class="col-md-10">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter Ingredient" %>
        </div>
      </div>
      <div class="form-group col-md-12">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit(@ingredient.new_record? ? "Add Ingredient":"Update Ingredient",
          class: "btn btn-primary btn-lg btn-xlarge") %>
        </div>
      </div>
    <% end %>
    <div class="col-md-12 col-md-offset-5 colormatch">
      [ <%= link_to "Cancel request and return to ingredients", ingredients_path  %> ]
    </div>
  </div>
</div>